<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %cyan(%logger{36})(%M - %F:%L\) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.hiro.util" level="DEBUG"/>
    <logger name="com.hiro.core" level="DEBUG"/>
    <logger name="com.hiro.demo" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>

</configuration>
